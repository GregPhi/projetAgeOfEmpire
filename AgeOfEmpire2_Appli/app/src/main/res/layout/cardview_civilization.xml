<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/img_civilization"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_blason" />

        <LinearLayout
            android:layout_width="302dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginBottom="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/civilization_name"
                android:layout_width="301dp"
                android:layout_height="wrap_content"
                android:hint="@string/civilization_name" />

            <TextView
                android:id="@+id/civilization_age"
                android:layout_width="301dp"
                android:layout_height="wrap_content"
                android:hint="@string/civilization_age" />

            <TextView
                android:id="@+id/civilization_bonus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/civilization_bonus" />

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>